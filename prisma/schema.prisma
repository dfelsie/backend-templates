generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  title      String   @db.VarChar(255)
  content    String?
  published  Boolean  @default(false)
  authorName String   @db.VarChar(255)
  author     User     @relation(fields: [authorName], references: [name])

  @@index([authorName])
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  name        String    @unique @db.VarChar(255)
  password    String
  displayName String    @db.VarChar(255)
  bio         String    @default("Hello World!") @db.VarChar(255)
  following   Follows[] @relation("follower")
  followers   Follows[] @relation("following")
  posts       Post[]

  @@index([email, name])
}

model Follows {
  followerName  String
  followingName String
  followedAt    DateTime @default(now())
  follower      User     @relation("follower", fields: [followerName], references: [name])
  following     User     @relation("following", fields: [followingName], references: [name])

  @@id([followerName, followingName])
  @@index([followerName, followingName])
}

